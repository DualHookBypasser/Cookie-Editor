{
  "manifest_version": 3,
  "name": "Cookie Editor",
  "version": "1.1",
  "description": "View, edit, and manage browser cookies with Roblox tracking and duplicate prevention",
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.roblox.com/*",
    "https://discord.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Editor"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
